{
  "manifest_version": 3,
  "name": "LeetCode â†’ GitHub",
  "version": "1.0",
  "permissions": ["storage"],
  "host_permissions": ["https://api.github.com/*", "https://leetcode.com/*"],
  "action": { "default_popup": "popup.html" },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
