{
  "manifest_version": 3,
  "name": "LeetCode GitHub Sync",
  "version": "2.0",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://leetcode.com/*", "https://api.github.com/*"],
  "content_scripts": [{
    "matches": ["https://leetcode.com/*"],
    "js": ["content.js"],
    "run_at": "document_end"
  }]
}
