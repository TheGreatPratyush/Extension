{
  "manifest_version": 3,
  "name": "LeetCode â†’ GitHub",
  "version": "1.0",
  "description": "Sync LeetCode problems to GitHub",
  "permissions": ["storage"],
  "host_permissions": ["https://leetcode.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
